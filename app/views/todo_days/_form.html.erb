<% form_for @todo_day do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :task_list %><br />
    <%= f.text_area :task_list %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
