<p>
  <b>Project name:</b>
  <%=h @project.name %>
</p>


<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>

<p> </p>
<table id="task_table">
	<tr>
		<th>TASKS</th>
	<tr>
    	<th>Task name</th>
    	<th>Description</th>
		<th>Estimated</th>
		<th>Progress</th>
  	</tr>
	<% @project.tasks.each do |task| %>
	<tr>
		<td class="task_name"><%= link_to (h task.name), task %></td>
    	<td class="task_description"><%=h task.description %></td>
		<td class="task_expected_pomo"><%=h task.expected_pomo %></td>
		<td><%=h task.pomodoros.count < 6 ? ('|' * task.pomodoros.count) : task.pomodoros.count %></td>
    	<td><%= link_to 'Show', task %></td>
    	<td><%= link_to 'Edit', edit_task_path(task) %></td>
    	<td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path(:project => @project.id) %>