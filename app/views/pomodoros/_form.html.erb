<% form_for @pomodoro do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :task_id %><br />
    <%= task_select(f) %>
  </p>
  <p>
    <%= f.label :init_time %><br />
    <%= f.datetime_select :init_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
